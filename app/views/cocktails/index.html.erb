
<div class="banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1543007630-9710e4a00a20?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=975&q=80)">
    <h1>Liquor Spirit </h1>
     <p><strong> Your finest spiritual cocktails </strong></p>
    <p>Store your best Creation</p>
</div>
<div class="container-fluid d-flex flex-wrap justify-content-between mt-3">
  <% @cocktails.each do |cocktail| %>
    <div class="col-4">
      <div class="card mt-2 p-2 h-100">
        <% if cocktail.photo.attached? %>
          <%= link_to cocktail_path(cocktail) do %>
            <%= cl_image_tag cocktail.photo.key, crop: :fitt, class: "pics" %>
          <% end %>
        <% else %>
          <%= link_to cocktail_path(cocktail) do %>
            <%= image_tag "https://source.unsplash.com/300x240/?#{cocktail.name}", alt: "alttext", class: "pics" %>
          <% end %>
        <% end %>
       <div class="card-body" style="cursor: pointer">
          <h5 class="card-title"><%= cocktail.name %></h5>
            <ul>
              <% cocktail.doses.each do |dose| %>
                <li><%= dose.ingredient.name %>
                <%= dose.description %></li>
              <% end %>
            </ul>
        </div>
    </div>
  </div>
    <% end %>
</div>

