
<div class="container mt-3">

  <h1>Create your own new cocktail</h1>

  <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.submit "Create a new cocktail", class: "btn btn-primary mr-2" %>
